<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:paddingLeft="@dimen/indentation_5"
        android:paddingRight="@dimen/indentation_5"
        android:paddingTop="@dimen/indentation_5"
        android:paddingBottom="@dimen/indentation_5"
        app:cardElevation="@dimen/indentation_5"
        app:cardUseCompatPadding="true">

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <ImageView
                android:id="@+id/ivCategoryPreview"
                android:layout_margin="@dimen/indentation_6"
                android:layout_width="@dimen/indentation_60"
                android:layout_height="@dimen/indentation_60"/>

        <TextView
                android:gravity="center_vertical"
                android:id="@+id/txtCategoryName"
                android:paddingLeft="@dimen/indentation_5"
                android:paddingTop="@dimen/indentation_20"
                android:textSize="@dimen/txt_size_20"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/txt_default_name"/>

    </LinearLayout>
</android.support.v7.widget.CardView>

